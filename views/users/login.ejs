<% layout('layouts/boilerplate') %> 

<div class="container">
<div class="row">
    <div class="col-md-6 px-0">
        <img src="https://images.unsplash.com/photo-1478131143081-80f7f84ca84d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1400&q=80" class="card-img-top" alt="">
    </div>
    <div class="col-md-6 px-0">
        <div class="card" style="border: none;">
            <div class="card-body px-md-5">
                <h5 class="card-title">Login</h5>
                <form action="/login" method="POST" >
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-5">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-secondary btn-block">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>









