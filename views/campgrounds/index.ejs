<% layout('layouts/boilerplate') %> 

<div id="cluster-map" class="mb-3"></div>

<h1>All Campgrounds</h1>

<% for (let camp of campgrounds){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.images[0].url %> " alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %> </p> 
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %>
                        </small>
                     </p>
                     <a class="btn btn-primary" href="/campgrounds/<%= camp._id %> ">View</a>
                </div>
            </div>
        </div>
    </div>
<% } %>  
<script>
    const mpbToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgroundsData = { features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>
